<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">14sp</item>
        <item name="colorButtonNormal">@color/buttonBackgroundLight</item>
        <item name="android:itemBackground">@color/lightGrey</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Dark theme base colours -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">14sp</item>
        <item name="colorButtonNormal">@color/buttonBackgroundDark</item>
        <item name="android:itemBackground">@color/lightGrey</item>
    </style>

    <style name="AppTheme.LargeText" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">20sp</item>
        <item name="colorButtonNormal">@color/buttonBackgroundLight</item>
        <item name="android:itemBackground">@color/lightGrey</item>
    </style>

    <style name="AppTheme.Dark.LargeText" parent="Theme.AppCompat">
        <!-- Dark theme base colours -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">20sp</item>
        <item name="colorButtonNormal">@color/buttonBackgroundDark</item>
        <item name="android:itemBackground">@color/lightGrey</item>
    </style>

    <style name="AppTheme.SmallText" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">10sp</item>
        <item name="colorButtonNormal">@color/buttonBackgroundLight</item>
        <item name="android:itemBackground">@color/lightGrey</item>
    </style>

    <style name="AppTheme.Dark.SmallText" parent="Theme.AppCompat">
        <!-- Dark theme base colours -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
